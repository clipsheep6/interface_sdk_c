import("//build/ohos.gni")

ohos_ndk_library("liburing_ndk") {
  ndk_description_file = "./liburing.ndk.json"
  min_compact_version = "1"
  output_name = "uring"
  output_extension = "so"
}

ohos_ndk_headers("liburing_header") {
  dest_dir = "$ndk_headers_out_dir"
  sources = [ "include/liburing_ndk/liburing.h" ]
}

ohos_ndk_headers("liburing_uring_header") {
  dest_dir = "$ndk_headers_out_dir/liburing"
  sources = [
    "include/liburing/barrier.h",
    "include/liburing/compat.h",
    "include/liburing/io_uring.h",
  ]
}
